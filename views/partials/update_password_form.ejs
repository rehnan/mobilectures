<div id="showMyAccount" style="padding-top: 20px">
	<div class="form-group">
	  <label for="old_password"><%= i18n("title_old_password") %>:</label>
	  <input type="text" class="form-control" name="old_password" id="old_password">
	</div>
	<div class="form-group">
	  <label for="new_password"><%= i18n("title_new_password") %>:</label>
	  <input type="text" class="form-control" name="new_password" id="new_password">
	</div>
	<div class="form-group">
	  <label for="confirm_password"><%= i18n("title_confirm_password") %>:</label>
	  <input type="text" class="form-control" name="confirm_password" id="confirm_password">
	</div>

	<div class="form-group">
	    <button type="submit" class="btn btn-primary btn-lg btn-block btn-sm"><%= i18n("label_save") %></button>
	</div>

	<!-- Partial to show flash messages -->
    <%- partial('../partials/flash') %>
</div>