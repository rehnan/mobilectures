<div>
  <ul class="legend_questions">
    <li> <b>Legenda: </b></li>
    <li><span class="valid"></span> Válida(s) </li>
    <li><span class="pending"></span> Pendente(s) </li>
  </ul>
</div>

<table class="table table-hover table-bordered">
  <thead>
    <tr> 
      <th class="text-center">Pontos</th>
      <th class="text-center">Questões</th>
      <th class="text-center">Ações</th>
    </tr>
  </thead>
  <tbody>

    <% _.each(quiz.questions, function (question, i){ %>
      <tr class="<%- (question.status === 'valid') ? 'success' : 'warning' %>">
      <td><%= question.points %></td>
      <td><%= question.description %></td>
      <td class="text-center">
      <div class="btn-group">
      <button type="button" class="btn btn-default" aria-label="Left Align"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
      <button type="button" class="btn btn-default" aria-label="Center Align"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
      <button type="button" class="btn btn-default" aria-label="Right Align"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></button>
      </div>
      </td>
      </tr>  
      <% }); %>
</tbody>
</table>