<div>
  <ul class="legend_questions">
    <li> <b>Legenda: </b></li>
    <li><span class="valid"></span> Válida(s) </li>
    <li><span class="pending"></span> Pendente(s) </li>
  </ul>
</div>

<table class="table table-hover table-bordered">
  <thead>
    <tr> 
      <th class="text-center">Pontos</th>
      <th class="text-center">Questões</th>
      <th class="text-center">Ações</th>
    </tr>
  </thead>
  <tbody>



    <% _.each(quiz.questions, function (question, i){ %>
      <tr class="<%- (question.status === 'valid') ? 'success' : 'warning' %>">
        <td><%= question.points %></td>
        <td><%= question.description %></td>
        <td class="text-center">
          <div class="btn-group">
            <%- QuizesHelper.popoverInfo(question) %>

            <%- (question.status === "valid") ? ViewHelpers.modal_preview(question.id) : '' %> 

            <%- ViewHelpers.link_action('/speaker/sessions/'+session.id+'/quizes/'+quiz.id+'/questions/'+question.id+'/edit', 'pencil', 'Editar Enquete', false, '') %>

            <%- ViewHelpers.link_action('/speaker/sessions/'+session.id+'/quizes/'+quiz.id+'/questions/'+question.id+'/delete', 'trash', 'Excluir', 'Tem certeza que deseja excluir esta questão?', '') %>
          </div>
        </td>
      </tr>  
      <%- partial ('preview', {question:question}) %>
      <% }); %>
</tbody>
</table>