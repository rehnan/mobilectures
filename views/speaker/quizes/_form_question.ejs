
<form action="<%= action %>" method="POST" id="form_question">
	<article>
		<div class="input-group input-group-lg <%= Messages.errors.form.class('description', errors) %>'">
			<span class="input-group-addon" id="sizing-addon2">Questão: </span>
			<input type="text" value="<%= question.description %>" class="form-control" name="description" placeholder="Descrição da questão" aria-describedby="sizing-addon2">
		</div>
		<div class="input-group input-group-lg <%= Messages.errors.form.class('description', errors) %>'">
			<%- Messages.errors.form.message("description", errors) %>
		</div>

		<br>
		<!-- Refatoras colocando um for pra gerar as opções  -->
		<div class="input-group input-group-lg <%= Messages.errors.form.class('points', errors) %>'">
			<span class="input-group-addon" id="sizing-addon2">Pontos: </span>
			<select class="form-control input-lg" name="points">
            <option <%- QuizesHelper.select_points(question, '0') %>>0</option>
            <option <%- QuizesHelper.select_points(question, '1') %>>1</option>
            <option <%- QuizesHelper.select_points(question, '2') %>>2</option>
            <option <%- QuizesHelper.select_points(question, '3') %>>3</option>
            <option <%- QuizesHelper.select_points(question, '4') %>>4</option>
            <option <%- QuizesHelper.select_points(question, '5') %>>5</option>
            <option <%- QuizesHelper.select_points(question, '6') %>>6</option>
            <option <%- QuizesHelper.select_points(question, '7') %>>7</option>
            <option <%- QuizesHelper.select_points(question, '8') %>>8</option>
            <option <%- QuizesHelper.select_points(question, '9') %>>9</option>
            <option <%- QuizesHelper.select_points(question, '10') %>>10</option>
         </select>
		</div>

		<div class="input-group input-group-lg <%= Messages.errors.form.class('points', errors) %>'">
			<%- Messages.errors.form.message("points", errors) %>
		</div>
		<br>
		<div class="input_fields_wrap question"> 
			
			<% _.each(question.alternatives, function (alternative, interator) { %>
				<%- QuizesHelper.input_foreah(alternative, interator, question.correct_alternative) %>
				<% }); %>
				<%- QuizesHelper.input_for_missing(question.alternatives) %>
		</div>

		<div class="input-group pull-right">
			<button type="button" class="btn btn-success btn-sm add_field_button"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nova Alternativa</button>
		</div> <br><br>
		<button type="submit" class="btn btn-sm btn-primary btn-block btn_save_altvs">Salvar Questão</button>
	</article>
</form>