<section>
	<header class="page-header text-center">
		<h3> Enquetes </h3>
		<div class="clearfix">
			<a href="/speaker/sessions/<%= session.id %>/polls/new" class="btn btn-default pull-right" ><%= i18n("poll.link.new") %></a>
		</div>
	</header>
</section>
<article>

	<div class="row">
		<!-- Generate this dynamical -->
		<% _.each(polls, function (poll) { %>
		<div class="col-sm-4">
			<div class="panel panel-default">
				<div class="panel-heading">
					<div class="btn-group pull-right"> 
					<a href="#" class="btn btn-default" aria-label="Center Align" rule="button"><span class="glyphicon glyphicon-send" aria-hidden="true"></span></a>
						<a href="/speaker/sessions/<%= session.id  %>/polls/edit/<%= poll.id %>" class="btn btn-default" aria-label="Center Align" rule="button"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
						<a href="#" class="btn btn-default" aria-label="Right Align" rule="button"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
						<a href="/speaker/sessions/<%= session.id  %>/polls/<%= poll.id %>/questions" type="button" class="btn btn-default" aria-label="Right Align" rule="button"><span class="glyphicon glyphicon glyphicon-list-alt" aria-hidden="true"></span></a>
						<a href="#" class="btn btn-default" aria-label="Right Align" rule="button"><span class="glyphicon glyphicon glyphicon-stats" aria-hidden="true"></span></a>
					</div>
					<br><br>
					<h3 class="panel-title text-center"><strong><%= poll.title %></strong></h3> 
				</div>
				<div class="panel-body">
					<%= ViewHelpers.show_initial_chars(0, 31, poll.description) %>
				</div>
			</div>
		</div>
		<% }) %>
		<!-- Generate this dynamical -->
	</div>

</article>
<section> 
	<footer></footer>
</section>