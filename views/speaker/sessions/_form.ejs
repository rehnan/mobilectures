<form action="<%= action %>" method='POST'>

  <div class='form-group <%= Messages.errors.form.class("key", errors) %>'>
    <label for='key'><%= i18n("session.key") %>:</label>
    <input type='text' class='form-control' name='key'
    placeholder='<%= i18n("session.input.placeholder.key") %>' value="<%= session.key %>" <%= disabledKey %> >
    <%- Messages.errors.form.message("key", errors) %>
  </div>

  <div class='form-group <%= Messages.errors.form.class("name", errors) %>'>
    <label for='name'><%= i18n("session.name") %>:</label>
    <input type='text' class='form-control' name='name'
    placeholder='<%= i18n("session.input.placeholder.name") %>' value="<%= session.name %>">
    <%- Messages.errors.form.message("name", errors) %>
  </div>

  <div class='form-group <%= Messages.errors.form.class("description", errors) %>'>
    <label for='description'><%= i18n("session.description") %>:</label> <br>
    <textarea class="form-control" name='description' rows="3"><%= session.description %></textarea>
    <%- Messages.errors.form.message("description", errors) %>
  </div>

  <div class="radio">
    <label>
      <input type="radio" name="status" value="true" <%= ViewHelpers.checked(session.status, true) %>>
      Sessão Aberta
    </label>
  </div>
  <div class="radio">
    <label>
      <input type="radio" name="status" value="false" <%= ViewHelpers.checked(session.status, false) %>>
      Sessão Fechada
    </label>
  </div>

  <hr />
  <div class="form-group">
    <button type="submit" class="btn btn-primary btn-block btn-sm"><%= i18n("global.form.submit.update") %></button>
    <a class="btn btn-default btn-block btn-sm" href="/speaker/sessions" role="button"><%= i18n("global.form.cancel") %></a>
  </div>
</form>
